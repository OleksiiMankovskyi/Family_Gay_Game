<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#e4ecbf">
    <TextView
            android:text="Time "
            android:layout_width="125dp"
            android:layout_height="66dp"
            android:id="@+id/timeText" android:gravity="center"
            android:textSize="24sp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="260dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="260dp"/>
    <TextView
            android:text="Score 0"
            android:layout_width="141dp"
            android:layout_height="63dp"
            android:id="@+id/resultText" android:textSize="24sp"
            android:gravity="center"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Restart" android:onClick="restart"
            android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="40dp"
            android:background="#33cc5f"/>
    <Button
            android:text="EXIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exit" android:onClick="exit"
            android:layout_marginBottom="112dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp"
            android:background="#ff0006"/>
    <android.support.v7.widget.GridLayout
            android:layout_width="392dp"
            android:layout_height="328dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/gridLayout" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">


        <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/peter"
                android:id="@+id/peterimageView"
                android:onClick="Score"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/peter"
                android:id="@+id/peterimageView1"
                android:onClick="Score"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                app:layout_column="2"
                app:layout_row="0"
                app:srcCompat="@drawable/peter"
                android:id="@+id/peterimageView2"
                android:onClick="Score"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/peter"
                android:id="@+id/peterimageView3"
                android:onClick="Score"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/peter"
                android:id="@+id/peterimageView4"
                android:onClick="Score"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                app:layout_column="2"
                app:layout_row="1"
                app:srcCompat="@drawable/peter"
                android:id="@+id/peterimageView5"
                android:onClick="Score"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                app:layout_column="0"
                app:layout_row="2"
                app:srcCompat="@drawable/peter"
                android:id="@+id/peterimageView6"
                android:onClick="Score"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                app:layout_column="1"
                app:layout_row="2"
                app:srcCompat="@drawable/peter"
                android:id="@+id/peterimageView7"
                android:onClick="Score"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                app:layout_column="2"
                app:layout_row="2"
                app:srcCompat="@drawable/peter"
                android:id="@+id/peterimageView8"
                android:onClick="Score"/>
        <ImageView
                android:layout_width="132dp"
                android:layout_height="106dp" app:srcCompat="@drawable/meg" app:layout_row="0"
                app:layout_column="0" android:id="@+id/megimageView" android:onClick="MissClick"/>

        <ImageView
                android:layout_width="132dp"
                android:layout_height="106dp" app:srcCompat="@drawable/meg" app:layout_row="0"
